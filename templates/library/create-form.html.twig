{% extends 'base.html.twig' %}

{% block body %}
<div style="margin: 50px;">
    <h1 style="text-align: center; margin-bottom: 10px;">Skapa bok</h1>
    <form method="POST" action="{{ path('book_submit') }}" class="book-form">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required>

        <label for="name">Author:</label>
        <input type="text" id="name" name="name" required>

        <label for="isbn">ISBN:</label>
        <input type="number" id="isbn" name="isbn" required>

        <label for="image">Image:</label>
        <input type="text" id="image" name="image" required>

        <button class="button" type="submit">Create</button>
        <button class="button" onclick="window.location.href = '{{ path('library') }}'">Tillbaka</button>
    </form>
</div>
{% endblock %}
