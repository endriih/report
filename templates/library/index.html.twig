    <table class="route-table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>ISBN</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for book in books %}
                <tr>
                    <td><a class="link" href="{{ path('read', {'id': book.id}) }}">{{ book.title }}</a></td>
                    <td>{{ book.name }}</td>
                    <td>{{ book.isbn }}</td>
                    <td><a class="link" href="{{ path('book_edit_by_id', {'id': book.id}) }}">Redigera</a></td>
                    <td><a class="link" href="{{ path('book_delete_by_id', {'id': book.id}) }}">Radera</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="button-wrapper">
