{% extends 'base.html.twig' %}

{% block body %}
<div style="margin-top: 50px;">
    <h1 style="text-align: center; margin-bottom: 10px;">Redigera bok</h1>

    <form method="POST" action="{{ path('book_edit_by_id', {'id': book.id}) }}" class="book-form">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="{{ book.title }}" required><br>

        <label for="name">Author:</label>
        <input type="text" id="name" name="name" value="{{ book.name }}" required><br>

        <label for="isbn">ISBN:</label>
        <input type="text" id="isbn" name="isbn" value="{{ book.isbn }}" required><br>

        <label for="image">Image:</label>
        <input type="text" id="image" name="image" value="{{ book.image }}" required><br>

        <button type="submit">Save</button>
        <button class="button" onclick="window.location.href = '{{ path('library') }}'">Tillbaka</button>
    </form>
</div>
{% endblock %}
